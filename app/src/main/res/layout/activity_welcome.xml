<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mat4"
    tools:context=".WelcomeActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/medium_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="60dp"
        app:cardElevation="30dp"
        android:background="@color/background"
        app:cardCornerRadius="20dp"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CHOOSE MEDIUM"
                android:textColor="@color/set_text"
                android:textSize="20sp"
                android:fontFamily="@font/capriola"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="मराठी"
                android:onClick="mediumSelect"
                android:textSize="18sp"
                android:textColor="@color/background"
                android:textStyle="bold"
                android:fontFamily="@font/capriola"
                android:background="@drawable/oval"
                android:layout_gravity="center"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="40dp"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="ENGLISH"
                android:onClick="mediumSelect"
                android:textColor="@color/background"
                android:textStyle="bold"
                android:fontFamily="@font/capriola"
                android:background="@drawable/oval"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="40dp"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/std_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="60dp"
        app:cardElevation="30dp"
        android:background="@color/background"
        app:cardCornerRadius="20dp"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CHOOSE STANDARD"
                android:textColor="@color/set_text"
                android:textSize="20sp"
                android:fontFamily="@font/capriola"
                android:gravity="center"
                android:layout_marginTop="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="30dp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="10"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="10dp"
                    android:onClick="stdSelect"
                    android:textAllCaps="false"
                    android:textColor="@color/background"
                    android:textStyle="bold"
                    android:fontFamily="@font/capriola"
                    android:background="@drawable/oval" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="9"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="1"
                    android:onClick="stdSelect"
                    android:textAllCaps="false"
                    android:textColor="@color/background"
                    android:textStyle="bold"
                    android:fontFamily="@font/capriola"
                    android:background="@drawable/oval" />

            </LinearLayout>

            <Button
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="8"
                android:onClick="stdSelect"
                android:textAllCaps="false"
                android:textColor="@color/background"
                android:textStyle="bold"
                android:fontFamily="@font/capriola"
                android:background="@drawable/oval"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>